<div class="booyah-box col-xs-10 col-xs-offset-1">

  <%= simple_form_for @usersetting, :url => walker_usersettings_path do |f| %>
    <h4>Enter Your Stride Length (use round number)</h4>
    <%= f.label "Your Step Length:" %>
    <%= f.input :userstride %>
  
    <br />
    <br />
    Step length unit:
    <br />
    <!--%= f.check_box :strideunit %--> <br />
    <%= f.collection_radio_buttons :strideunit, [[true, 'inches'], [false, 'cm']], :first, :last %>
    <br />
    <br />
    Distance unit:
    <br />
    <!--%= f.check_box :distanceunit %--> 
     <%= f.collection_radio_buttons :distanceunit, [[true, 'miles'], [false, 'km']], :first, :last %>
    <br />
    <br />
    <br />
    <%= f.submit 'Create', :class => 'btn btn-primary' %>
  <% end %>
</div>